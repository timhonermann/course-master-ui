{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@course-master/features/course/feature": [
        "libs/features/course/feature/src/index.ts"
      ],
      "@course-master/features/settings/domain": [
        "libs/features/settings/domain/src/index.ts"
      ],
      "@course-master/features/settings/feature": [
        "libs/features/settings/feature/src/index.ts"
      ],
      "@course-master/features/settings/model": [
        "libs/features/settings/model/src/index.ts"
      ],
      "@course-master/features/settings/ui": [
        "libs/features/settings/ui/src/index.ts"
      ],
      "@course-master/features/shell/domain": [
        "libs/features/shell/domain/src/index.ts"
      ],
      "@course-master/features/shell/feature": [
        "libs/features/shell/feature/src/index.ts"
      ],
      "@course-master/features/shell/layout": [
        "libs/features/shell/layout/src/index.ts"
      ],
      "@course-master/features/shell/model": [
        "libs/features/shell/model/src/index.ts"
      ],
      "@course-master/features/shell/ui": [
        "libs/features/shell/ui/src/index.ts"
      ],
      "@course-master/shared/config/model": [
        "libs/shared/config/model/src/index.ts"
      ],
      "@course-master/shared/header/ui": ["libs/shared/header/ui/src/index.ts"],
      "@course-master/shared/http/domain": [
        "libs/shared/http/domain/src/index.ts"
      ],
      "@course-master/shared/icon/domain": [
        "libs/shared/icon/domain/src/index.ts"
      ],
      "@course-master/shared/icon/model": [
        "libs/shared/icon/model/src/index.ts"
      ],
      "@course-master/shared/routing/model": [
        "libs/shared/routing/model/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
